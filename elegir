<script>
// Get the modal
var modal = document.getElementById('id01');
var contador=1;
var myArray = ['opcion 1', 'opcion 2', 'opcion 3', 'opcion 4', 'opcion 5',];    
// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
    var item = myArray[(Math.random()*myArray.length)|0];
    document.getElementById("item").innerHTML= item
    document.getElementById("pulsaciones").innerHTML = contador + 1
			contador++;
  }
}
function escoger() {
  var elegida = item;

  if (item === 'opcion 1') {
  function redireccionar(){
  window.locationf="https://www.google.com";
    
  } else if (item === 'opcion 2') {
  function redireccionar(){
  window.locationf="https://www.facebook.com";
    
  } 
}
